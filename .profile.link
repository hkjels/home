#!/usr/bin/env bash


# Locale

LANG="en_US.UTF-8"
LANGUAGE="en"
LC_CTYPE="en_US.UTF-8"
LC_ALL="en_US.UTF-8"
export LANG LANGUAGE LC_CTYPE LC_ALL


# History

HISTSIZE=32768
HISTFILESIZE=$HISTSIZE
HISTCONTROL=ignoredups
HISTIGNORE="ls:cd:cd -:pwd:exit:date"
export HISTSIZE HISTFILESIZE HISTCONTROL HISTIGNORE


# Manpage
PAGER="less -XFSiw"
MANPAGER=$PAGER
export PAGER MANPAGER MANPATH


# Source local

[ -f ~/.profile.local ] && . ~/.profile.local

