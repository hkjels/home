#!/usr/bin/env bash


# Prompt λ

PS1="\["
PS1+="${YELLOW}\$([ \j -gt 0 ] && echo '[\j] ') ${RESET}"             # Jobs
PS1+="${CYAN}\w ${RESET}"                                             # Path
PS1+="\$(vcprompt -f \"${CYAN}(%n@%b) ${YELLOW}%u${RED}%m${RESET}\")" # VC
PS1+="\n ${BOLD}${RED}λ ${RESET}"                                     # Command-line
PS1+="\]"

